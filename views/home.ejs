<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MovieFlix</title>
    <link rel="stylesheet" href="/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
      <div class="container-fluid pb-2">
        <a class="navbar-brand mx-4" href="/">MovieFlix</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse mx-2" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item mx-2">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item mx-2">
              <a class="nav-link active" href="/arts/add">Subscription</a>
            </li>
            <li class="nav-item mx-2">
              <a class="nav-link active" href="/profil/1">My Profile</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <section class="bg-secondary text-bg-dark min-vh-100">
      <div class="container">
        <div class="row">
          <form class="row g-3" action="/" method="get">
            <div class="col-md-3">
              <label for="search" class="visually-hidden">Title</label>
              <input type="text" class="form-control" id="search" name="search" placeholder="Search by title movie..." />
            </div>
            <div class="col">
              <button type="submit" class="btn btn-dark">Search</button>
            </div>
          </form>
        </div>

        <div class="row mt-4">
          <% data.forEach(i=> { %>
          <div class="col-md-3 my-4">
            <div class="card h-100">
              <img src="<%= i.imageUrl %>" class="card-img-top h-100" />
              <div class="card-body">
                <h5 class="card-title"><%= i.title %></h5>
                <h6 class="card-subtitle my-3 text-body-secondary"><%= i.formattedDate %></h6>
                <a href="/movies/<%= i.id %>" class="btn btn-dark mt-3">Show details</a>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
