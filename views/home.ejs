<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movieflix</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
        <div class="container-fluid pb-2">
            <a class="navbar-brand mx-4" href="/">Art Collections</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse mx-2" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item mx-2">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link active" href="/arts/add">Add Art</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="bg-secondary text-bg-dark min-vh-100">
        <div class="container">

            <div class="row">
                <form class="row g-3" action="/" method="get">
                    <div class="col-md-3">
                        <label for="searchNameArt" class="visually-hidden">Title</label>
                        <input type="text" class="form-control" id="searchNameArt" name="searchNameArt" placeholder="Search by title">
                    </div>
                    <div class="col-md-3">
                        <label for="searchArtist" class="visually-hidden">Artist</label>
                        <input type="text" class="form-control" id="searchArtist" name="searchArtist" placeholder="Or by artist">
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-dark">Search</button>
                    </div>
                </form>
            </div>

            <div class="row mt-4">
                <% data.forEach(i=> { %>
                    <div class="col-md-6 my-3">
                        <div class="card h-100">
                            <img src="<%= i.photo %>" class="card-img-top img-fluid" alt="photo" style="max-height: 250px;">
                            <div class="card-body">
                                <h5 class="card-title"><%= i.name %></h5>
                                <p class="card-text"><small class="text-body-secondary"><%= i.artist %></small></p>
                                <p class="card-text scroll"><%= i.description %></p>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-dark" href="/arts/<%= i.id %>" role="button">See Detail</a>
                                <a class="btn btn-danger" href="/arts/<%= i.id %>/delete" role="button">Delete</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>